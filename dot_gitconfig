[alias]
  aa = add --all
  ap = add --patch
  ci = commit
  st = status
  co = checkout
  br = branch
  ls = ls-files
  graph = log --graph --all --decorate
  gr    = log --graph --pretty=oneline --abrev-commit --all --decorate
  one   = log --pretty='format:%Cgreen%H %Cred%ai %Creset- %s' --decorate
  cached = diff --cached
  amend = commit --amend
  pureb = pull --rebase
  continue = rebase --continue
  abort = rebase --abort

[commit]
  gpgsign = true

[pull]
  rebase = true
  autostash = true

[rebase]
  autosquash = true

[init]
  defaultBranch = main

[merge]
  conflictstyle = diff3

