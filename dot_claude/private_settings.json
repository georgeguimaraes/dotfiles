{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "300000"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(elixir:*)",
      "Bash(find:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git cherry:*)",
      "Bash(git config:*)",
      "Bash(git count-objects:*)",
      "Bash(git describe:*)",
      "Bash(git diff-tree:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git fsck)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git merge-base:*)",
      "Bash(git merge:*)",
      "Bash(git mv:*)",
      "Bash(git name-rev:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git reflog:*)",
      "Bash(git remote:*)",
      "Bash(git rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git shortlog:*)",
      "Bash(git show:*)",
      "Bash(git status)",
      "Bash(git tag:*)",
      "Bash(git verify-pack:*)",
      "Bash(git whatchanged:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mix compile:*)",
      "Bash(mix compile)",
      "Bash(mix credo:*)",
      "Bash(mix deps.get:*)",
      "Bash(mix deps.outdated:*)",
      "Bash(mix ecto.gen.migration:*)",
      "Bash(mix format:*)",
      "Bash(mix format)",
      "Bash(mix hex.outdated:*)",
      "Bash(mix test:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:hexdocs.pm)",
      "Read(//Users/george/.config/nvim/**)",
      "WebSearch",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(wezterm cli set-tab-title:*)",
      "WebFetch(domain:api.github.com)",
      "Bash(git clone:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/AGENTS.md\" ]; then cat \"$CLAUDE_PROJECT_DIR/AGENTS.md\"; fi"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"{\\\"systemMessage\\\": \\\"Today is $(date '+%A, %B %d, %Y')\\\"}\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/AGENTS.md\" ]; then cat \"$CLAUDE_PROJECT_DIR/AGENTS.md\"; fi"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"{\\\"systemMessage\\\": \\\"Today is $(date '+%A, %B %d, %Y')\\\"}\""
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"systemMessage\": \"SKILL NAMING: Elixir skills from claude-code-elixir plugin do NOT use superpowers: prefix. Use: otp-thinking, elixir-thinking, phoenix-ecto-thinking, elixir-architectural-thinking (NOT superpowers:otp-thinking). Only superpowers plugin skills use superpowers: prefix.\"}'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]0;zsh\\007' > /dev/tty 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "elements-of-style@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true,
    "stripe@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "elixir-lsp@claude-code-elixir": false,
    "mix-format@claude-code-elixir": false,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true,
    "mix-compile@claude-code-elixir": false,
    "elixir-architectural-thinking@claude-code-elixir": true,
    "otp-thinking@claude-code-elixir": true,
    "phoenix-ecto-thinking@claude-code-elixir": true,
    "context-engineering@context-engineering-marketplace": true,
    "elixir-skill-awareness@claude-code-elixir": true,
    "elixir-thinking@claude-code-elixir": true,
    "elixir@claude-code-elixir": true,
    "agent-architecture@context-engineering-marketplace": true,
    "agent-development@context-engineering-marketplace": true,
    "agent-evaluation@context-engineering-marketplace": true,
    "context-engineering-fundamentals@context-engineering-marketplace": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "clangd-lsp@claude-plugins-official": true,
    "cognitive-architecture@context-engineering-marketplace": true
  },
  "alwaysThinkingEnabled": true
}
