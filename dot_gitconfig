[alias]
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  commit = commit -s
  aa = add --all
  ap = add --patch
  ci = commit
  st = status
  co = checkout
  br = branch
  ls = ls-files
  graph = log --graph --all --decorate
  gr    = log --graph --pretty=oneline --abrev-commit --all --decorate
  one   = log --pretty='format:%Cgreen%H %Cred%ai %Creset- %s' --decorate
  cached = diff --cached
  amend = commit --amend
  pureb = pull --rebase
  continue = rebase --continue
  abort = rebase --abort
  nuke = clean -f -d
  remotes = remote -v
  conflicts = !git --no-pager diff --name-only --diff-filter=U | xargs grep -c '^=======$'
  blame-plus = !git blame -w -M -C -C -C

