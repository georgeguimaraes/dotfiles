{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "300000"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(elixir:*)",
      "Bash(find:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git cherry:*)",
      "Bash(git config:*)",
      "Bash(git count-objects:*)",
      "Bash(git describe:*)",
      "Bash(git diff-tree:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git fsck)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git merge-base:*)",
      "Bash(git merge:*)",
      "Bash(git mv:*)",
      "Bash(git name-rev:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git reflog:*)",
      "Bash(git remote:*)",
      "Bash(git rev-list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git shortlog:*)",
      "Bash(git show:*)",
      "Bash(git status)",
      "Bash(git tag:*)",
      "Bash(git verify-pack:*)",
      "Bash(git whatchanged:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mix compile:*)",
      "Bash(mix compile)",
      "Bash(mix credo:*)",
      "Bash(mix deps.get:*)",
      "Bash(mix deps.outdated:*)",
      "Bash(mix ecto.gen.migration:*)",
      "Bash(mix format:*)",
      "Bash(mix format)",
      "Bash(mix hex.outdated:*)",
      "Bash(mix test:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:hexdocs.pm)"
    ],
    "deny": []
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/AGENTS.md\" ]; then cat \"$CLAUDE_PROJECT_DIR/AGENTS.md\"; fi"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "elements-of-style@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true,
    "stripe@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "elixir-lsp@claude-code-elixir": true,
    "mix-format@claude-code-elixir": true
  },
  "alwaysThinkingEnabled": true
}
